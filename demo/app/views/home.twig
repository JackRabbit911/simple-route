{% extends 'layout.twig' %}
{% import 'menuitem.twig' as m %}
{% block content %}

{# {% set cont =  "npm i daisyui
'/{action}'" %} #}

<div class="bg-base-200 min-h-screen">
    <h1 class="text-5xl font-bold text-center py-4">{{ title|default('Homepage') }}</h1>
    <div class="flex flex-col md:flex-row">
        <ul class="menu rounded-box basis-full md:basis-1/3">
            {% for item in menu %}
            {{ m.menuitem(item) }}
            {% endfor %}
        </ul>
        <div class="basis-full md:basis-2/3">
            {% apply spaceless %}
            <div class="p-4">
                {{- cont|raw -}}
            </div>
            {% endapply %}
        </div>
    </div>
</div>
{% endblock %}
